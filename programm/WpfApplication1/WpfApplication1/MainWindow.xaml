<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="GroupBox" Margin="10,10,2,10">
            <StackPanel>
                <RadioButton x:Name="fourRadioButton" Content="4" Checked="FourRadioButton_Checked"/>
                <RadioButton x:Name="eightRadioButton" Content="8" Checked="EightRadioButton_Checked"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="GroupBox" Margin="3,10,10,10" Grid.Column="1">
            <Canvas x:Name="canvas"/>
            
        </GroupBox>
        

    </Grid>
</Window>